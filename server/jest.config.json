{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "moduleFileExtensions": ["js", "ts", "json"],
  "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.ts$",
  "collectCoverageFrom": ["src/**/*.ts"],
  "coverageDirectory": "coverage",
  "verbose": true,
  "globals": {
    "ts-jest": {
      "tsconfig": "tsconfig.json"
    }
  },
  "transform": {
    "^.+\\.tsx?$": [
      "ts-jest",
      {
        "tsconfig": "tsconfig.json",
        "babelConfig": true,
        "enableTsDiagnostics": true
      }
    ]
  }
}
